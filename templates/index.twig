<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>

        <link href="{{ base_url }}/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ base_url }}/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">

        <link href="{{ base_url }}/css/styles.css" rel="stylesheet">

        <script src="{{ base_url }}/vendor/jquery/jquery.js"></script>
        <script src="{{ base_url }}/vendor/bootstrap/js/bootstrap.min.js"></script>

        <script src="{{ base_url }}/js/assync.js"></script>
        <script src="{{ base_url }}/js/main.js"></script>
    </head>
    <body>
        <header class="navbar navbar-default navbar-static-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">
                        <i class="fa fa-fw fa-lg fa-code-fork"></i>
                        Analisador Léxico
                    </a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="navbar-link" id="reset-analyzer">
                            <i class="fa fa-fw fa-lg fa-recycle"></i>
                            Reiniciar Analisador
                        </a>
                    </li>
                </ul>
            </div>
        </header>

        <main class="container-fluid">
            <div class="row">
                <section class="input col-sm-4">

                    <div class="in-treatment">
                        <span>...</span>
                    </div>

                    <div class="input-words">
                        <form name="leitor" method="PUT" action="{{ path_for('begin') }}">
                            <div class="form-group has-feedback">
                                <input type="text" name="in" class="form-control" placeholder="Sentenças aqui...">
                                <span class="form-control-feedback glyphicon"></span>
                            </div>

                            <div id="information"></div>
                            
                            <div class="form-group text-right">
                                <button type="button" class="btn btn-primary" id="add-word-btn" disabled>
                                    Adicionar ao Dicionário
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="dictionary">{% include 'dictionary.twig' %}</div>
                </section>

                <section class="automaton col-sm-8">{% include 'automaton.twig' %}</section>

            </div>
        </main>

        <footer class="navbar navbar-inverse navbar-static-bottom">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-text">
                        Gustavo Fabiane 
                    </li>
                    <li class="navbar-text">
                        Ciência da Computação
                    </li>
                    <li class="navbar-text">
                        Turma 2014
                    </li>
                    <li class="navbar-text">
                        Linguagens Formais
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>